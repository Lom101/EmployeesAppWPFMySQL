<Window x:Class="EmployeesApp.EditEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeesApp"
        mc:Ignorable="d"
        Title="EditEmployeeDialog" Height="323" Width="300">
    <Grid>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Position:"/>
            <TextBox x:Name="PositionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Salary:"/>
            <TextBox x:Name="SalaryTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Department:"/>
            <TextBox x:Name="DepartmentTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Date of Birth:"/>
            <DatePicker x:Name="DateOfBirthDatePicker" Margin="0,0,0,10"/>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10,0,10,0" VerticalAlignment="Center" Height="260">
            <Button Content="Сохранить" Width="100" Height="30" Margin="0,220,60,0" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="100" Height="30" Margin="0,220,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
